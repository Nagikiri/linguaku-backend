{
  "expo": {
    "name": "LinguaKu",
    "slug": "linguaku-v2",
    "owner": "testingitk",
    "version": "1.0.0",
    "scheme": "linguaku",
    "platforms": [
      "ios",
      "android"
    ],
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 0
    },
    "splash": {
      "image": "./src/assets/spalsh.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "src/assets/**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.linguaku.app.v2",
      "associatedDomains": [
        "applinks:linguaku.com"
      ],
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Allow $(PRODUCT_NAME) to use speech recognition.",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to use the microphone."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.linguaku.app.v2",
      "softwareKeyboardLayoutMode": "pan",
      "jsEngine": "hermes",
      "permissions": [
        "RECORD_AUDIO",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "linguaku",
              "host": "*"
            },
            {
              "scheme": "https",
              "host": "linguaku.com"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "plugins": [
      "expo-speech-recognition"
    ],
    "extra": {
      "eas": {
        "projectId": "1accbf5f-a39f-4c09-a710-2e250d47ea45"
      }
    }
  }
}
